<project name='Galactica' default='dist' basedir='.'>
	<property name='src' location='./src' />
	<property name='bin' location='./bin' />

	<target name='init'>
		<mkdir dir="${bin}" />
	</target>
	<target name='compile' depends='init'>
		<copy todir='./bin/res'>
			<fileset dir="./res" />
		</copy>
		<javac srcdir="${src}" destdir="${bin}">
			<classpath>
				<pathelement location='./lib/jars/lwjgl.jar' />
				<pathelement location='./lib/jars/lwjgl_util.jar' />
				<pathelement location='./lib/jars/slick-util.jar' />
			</classpath>
		</javac>
	</target>
</project>
